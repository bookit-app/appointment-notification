{
  "name": "appointment-notification",
  "description": "Generate Notification Emails when appointments change",
  "main": "src/index.js",
  "scripts": {
    "start": "functions-framework --source src/index.js --target=appointmentNotification",
    "lint": "eslint src",
    "test": "NODE_ENV=test nyc mocha tests --recursive --exit"
  },
  "nyc": {
    "all": false,
    "check-coverage": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules"
    ],
    "lines": 90,
    "functions": 90,
    "branches": 90,
    "statements": 90,
    "reporter": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "dependencies": {
    "@google-cloud/firestore": "^2.6.1",
    "@google-cloud/functions-framework": "^1.3.2",
    "lodash": "^4.17.19",
    "nodemailer": "^6.3.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.5"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^6.0.0",
    "eslint": "^6.5.1",
    "husky": "^3.0.7",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1",
    "proxyquire": "^2.1.3",
    "sinon": "^7.5.0"
  },
  "engines": {
    "node": "10"
  }
}
